        "required": [
          "address",
          "confirmPassword",
          "dateOfBirth",
          "email",
          "firstName",
          "lastName",
          "password",
          "phoneNumber",
          "preferredClasses",
          "preferredDifficulty",
          "preferredTimes",
          "username"
        ],
        "type": "object",
        "properties": {
          "username": {
            "maxLength": 50,
            "minLength": 3,
            "type": "string"
          },
          "password": {
            "minLength": 6,
            "type": "string",
            "format": "password"
          },
          "confirmPassword": {
            "minLength": 1,
            "type": "string",
            "format": "password"
          },
          "email": {
